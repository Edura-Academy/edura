# Production Environment Variables
# Bu degiskenleri Railway/Render platformunda ayarlayin

# Database (Railway MySQL veya PlanetScale)
DATABASE_URL=mysql://user:password@host:3306/edura_prod

# JWT Secret (guclu bir rastgele string kullanin)
JWT_SECRET=your-production-jwt-secret-minimum-32-characters

# Server Config
PORT=5000
NODE_ENV=production

# CORS (Frontend URL)
FRONTEND_URL=https://edura.vercel.app

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini AI (Chatbot icin)
GEMINI_API_KEY=your_gemini_api_key

# Firebase Storage (Dosya yukleme icin)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
